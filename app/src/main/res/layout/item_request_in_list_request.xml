<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatarRequestInListRequest"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:civ_border_width="3dp"
        app:civ_border_color="#FFFFFFFF"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:elevation="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_default"
        />

    <TextView
        android:id="@+id/nameRequestInListRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/avatarRequestInListRequest"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        />

    <ImageView
        android:id="@+id/btnApproveRequestInListRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/approve"
        android:layout_toStartOf="@id/btnRejectRequestInListRequest"
        android:layout_marginTop="25dp"
        />

    <ImageView
        android:id="@+id/btnRejectRequestInListRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/reject"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        />

</RelativeLayout>